<?xml version="1.0" encoding="utf-8"?>
<!-- Root Layout: Vertical orientation for overall calculator layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Display Row: Consists of C button and DISPLAY TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- C Button: Used for the clear operation -->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="72sp"
            android:onClick="onClearClick" />
        <!-- Display TextView: Used to display input and results -->
        <TextView
            android:id="@+id/display"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="36sp"
            android:gravity="center|end"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Number Row: Consists of numbers 7, 8, 9 and addition operation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Number buttons 7, 8, 9 and addition operation button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="72sp"
            android:onClick="onOperationClick" />
    </LinearLayout>

    <!-- Number Row: Consists of numbers 4, 5, 6 and subtraction operation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Number buttons 4, 5, 6 and subtraction operation button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="72sp"
            android:onClick="onOperationClick" />
    </LinearLayout>

    <!-- Number Row: Consists of numbers 1, 2, 3 and multiplication operation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="72sp"
        android:orientation="horizontal">

        <!-- Number buttons 1, 2, 3 and multiplication operation button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="72sp"
            android:onClick="onOperationClick" />
    </LinearLayout>

    <!-- Number Row: Consists of decimal point, 0, equal sign, and division operation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Buttons for decimal, 0, equals, and division operations -->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="72sp"
            android:onClick="onNumberClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="72sp"
            android:onClick="onEqualClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="72sp"
            android:onClick="onOperationClick" />
    </LinearLayout>
</LinearLayout>